<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Volunteer Application Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="background: #2461b7;">
    <!-- form section -->
    <section style="padding-top: 100px; padding-bottom: 100px;">
      <div class="container" style="background-color: #5895DF; width: 760px; padding-bottom: 50px;" >
        <div class="row">
          <div class="d-flex justify-content-center align-items-center">
            <div class="col-6">
              <div class="imgTag p-4">
                <img src="./img/volunteer.img" alt="volunteer_img" style="width: 310px;">
              </div>
            </div>
            <div class="col-6 p-3">
              <h1 class="text-light text-uppercase text-start">Volunteer Application Form</h1>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <div class="col-12">
            <div class="formTag p-4" style="background-color: #D6E7FF;">
              <form action="/updateVolCOn/<%= editsingleRecod.id %>" method="post">
                <!-- name / last name -->
                <div class="d-flex">
                  <div class="col-6 px-3 my-2">
                      <input type="text" name="id" value="<%= editsingleRecod.id %>" hidden>
                      <label for="name" class="form-label">Name</label>
                      <input type="text" class="form-control" id="name" name="name" value="<%= editsingleRecod.name %>">
                  </div>
                  <div class="col-6 my-2">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input type="text" class="form-control" id="lastName" name="lastName" value="<%= editsingleRecod.lastName %>">
                  </div>
                </div>
                <!-- phone / email -->
                <div class="d-flex">
                  <div class="col-6 px-3">
                    <label for="number" class="form-label">Phone</label>
                    <input type="number" class="form-control" id="number" name="number" value="<%= editsingleRecod.number %>">
                  </div>
                  <div class="col-6">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= editsingleRecod.email %>">
                  </div>
                </div>
                <!-- address -->
                <div class="d-flex">
                  <div class="col-6 px-3 my-2">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" 
                    value="<%= editsingleRecod.address %>">
                  </div>
                  <div class="col-6 my-2">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" value="<%= editsingleRecod.city %>">
                  </div>
                </div>
                <!-- skills / Comments -->
                <div class="d-flex">
                  <div class="col-6 px-3 my-2">
                    <label for="skills" class="form-label">Skills</label>
                    <input type="text" class="form-control" id="skills" name="skills" value="<%= editsingleRecod.skills %>">
                  </div>
                  <div class="col-6 my-2">
                    <label for="comments" class="form-label">Comments</label>
                    <input type="text" class="form-control" id="comments" name="comments" value="<%= editsingleRecod.comments %>">
                  </div>
                </div>
                <!-- submit -->
                <div class="d-flex justify-content-center mt-5">
                  <button type="submit" class="btn btn-outline-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>    
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>